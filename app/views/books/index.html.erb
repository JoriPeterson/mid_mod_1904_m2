<h1>Books</h1>

<% @books.each do |book| %>
<section id ='book-<%= book.id %>'>
  <p>Title: <%= book.title %></p>
  <p>Pages: <%= book.number_of_pages %></p>
  <p>Publication Year:<%= book.publication_year %></p>
  <p>Author:<%= "#{book.author_name}" %></p>
  <%# <p>Author:<%= link_to "#{book.author_name}", author_path(@author.id) %></p> %>
</section>
<% end %>
